pipeline {
    agent any
    tools {
        maven 'maven-tool'
    }
    stages {
        stage("Checkout Demo code") {
            steps {
                deleteDir()
                sh 'git clone https://github.com/Jeevan-practice/sample-maven.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building..'
                dir('sample-maven') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Upload to S3') {
    steps {
        s3Upload(
            profileName: 's3-profile', // Must match Jenkins S3 profile name
            entries: [[
                bucket: 'maven-artifacts-9964',
                sourceFile: 'sample-maven/target/*.war',
                selectedRegion: 'us-east-2'
            ]]
        )
    }
}
    }
}


