pipeline {
    agent any
    tools {
        maven 'maven-tool'
    }
    stages {
        stage("Checkout Demo code") {
            steps {
                deleteDir()
                sh 'git clone https://github.com/Jeevan-practice/sample-maven.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building..'
                dir('sample-maven') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Upload to S3') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-cred'
                ]]) {
                    sh '''
                        aws s3 cp sample-maven/target/*.war s3://maven-artifacts-9964/ --region ap-south-1
                    '''
                }
            }
        }
    }
}
