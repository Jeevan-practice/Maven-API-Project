pipeline {
    agent any
    tools {
        maven 'maven-tool'
    }
    stages {
        stage("Checkout Demo code") {
            steps {
                deleteDir()
                sh 'git clone https://github.com/Jeevan-practice/sample-maven.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building..'
                dir('sample-maven') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Upload to S3') {
            steps {
                s3Upload(
                    consoleLogLevel: 'INFO',
                    dontWaitForConcurrentBuildCompletion: false,
                    dontSetBuildResultOnFailure: false,
                    pluginFailureResultConstraint: 'FAILURE',
                    profileName: '', // Leave empty if using credentialsId
                    userMetadata: [], // Required but can be empty
                    entries: [[
                        bucket: 'maven-artifacts-9964',
                        sourceFile: 'sample-maven/target/*.war',
                        selectedRegion: 'ap-south-1', // Change to your AWS region
                        storageClass: 'STANDARD',
                        noUploadOnFailure: true,
                        credentialsId: 'aws-cred'
                    ]]
                )
            }
        }
    }
}
