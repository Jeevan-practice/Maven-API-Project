pipeline {
    agent any
    tools {
        maven 'maven-tool'  // Matches Maven installation name in Jenkins Global Tool Configuration
    }
    stages {
        stage("Checkout Demo code") {
            steps {
                deleteDir()
                sh 'git clone https://github.com/Jeevan-practice/sample-maven.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building..'
                dir('sample-maven') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Upload to S3') {
            steps {
                s3Upload(
                    bucket: 'maven-artifacts-9964',
                    includePathPattern: '**/*.war',   // Use ** for recursive match
                    workingDir: 'sample-maven/target', // WAR files are inside target folder
                    credentialsId: 'aws-cred'
                )
            }
        }
    }
}
