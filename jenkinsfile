pipeline {
    agent any
    tools {
        maven 'maven-tool'  // This should match the Maven installation name in Jenkins Global Tool Configuration
    }
    stages {
        stage("Checkout Demo code") {
            steps {
                deleteDir()
                sh 'git clone https://github.com/Jeevan-practice/sample-maven.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building..'
                dir('sample-maven') {
                    sh 'mvn clean package'
                }
            }
        }

       
    }
}


